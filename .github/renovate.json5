{
    $schema: 'https://docs.renovatebot.com/renovate-schema.json',
    extends: [
        'config:recommended',
    ],
    labels: [
        'dependencies',
    ],
    packageRules: [
        {
            groupName: 'Kotlin and KSP',
            matchPackageNames: [
                'com.google.devtools.ksp{/,}**',
                'org.jetbrains.kotlin:kotlin{/,}**'
            ],
        },
        {
            groupName: 'AGP',
            matchPackageNames: [
                '/com.android.*/',
            ],
        },
        {
            groupName: 'Hilt',
            matchPackageNames: [
                'com.google.dagger{/,}**',
            ],
        },
    ],
}
