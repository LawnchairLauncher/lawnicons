{
    $schema: 'https://docs.renovatebot.com/renovate-schema.json',
    extends: [
        'config:recommended',
    ],
    labels: [
        'dependencies',
    ],
    packageRules: [
        // Enable auto-merge for minor/patch updates.
        {
            matchUpdateTypes: [
                'minor',
                'patch',
            ],
            automerge: true,
            matchPackageNames: [
                '/.*/',
            ],
        },
        {
            groupName: 'Kotlin',
            matchPackageNames: [
                'org.jetbrains.kotlin:kotlin{/,}**'
            ],
        },
        {
            groupName: 'AGP',
            matchPackageNames: [
                '/com.android.*/',
            ],
        },
        {
            groupName: 'Hilt',
            matchPackageNames: [
                'com.google.dagger{/,}**',
            ],
        },
    ],
}
